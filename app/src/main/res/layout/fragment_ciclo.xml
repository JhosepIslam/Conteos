<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CicloFragment">

    <!-- TODO: Update blank fragment layout -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciclos"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:textStyle="bold" />


        <android.support.v7.widget.CardView
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:textSize="20dp"
                    android:id="@+id/textViewCiclo01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciclo: 01-"
                    android:textColor="#fff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textViewInicioCiclo01"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inicio"
                        android:textColor="#fff"/>
                    <TextView
                        android:id="@+id/textViewFinCiclo01"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fin"
                        android:textColor="#fff"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewActivo_Inactivo01"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activo"
                    android:textColor="#fff"/>
                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/btn_modificar01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modificar"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:textSize="20dp"

                    android:id="@+id/textViewCiclo02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciclo: 02-"
                    android:textColor="#fff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textViewInicioCiclo02"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inicio"
                        android:textColor="#fff"/>
                    <TextView
                        android:id="@+id/textViewFinCiclo02"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fin"
                        android:textColor="#fff"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewActivo_Inactivo02"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activo"
                    android:textColor="#fff"/>
                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/btn_modificar02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modificar"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:textSize="20dp"
                    android:id="@+id/textViewCiclo03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciclo: 03-"
                    android:textColor="#fff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textViewInicioCiclo03"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inicio"
                        android:textColor="#fff"/>
                    <TextView
                        android:id="@+id/textViewFinCiclo03"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fin"
                        android:textColor="#fff"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewActivo_Inactivo03"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activo"
                    android:textColor="#fff"/>
                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/btn_modificar03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modificar"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>






    </LinearLayout>

</ScrollView>


</FrameLayout>
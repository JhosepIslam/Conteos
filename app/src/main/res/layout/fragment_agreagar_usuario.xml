<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AgreagarUsuarioFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5DC">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/button_shape"
                android:orientation="vertical"
                android:padding="5dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:id="@+id/LLNivelUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="99dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="Nivel de Usuario: "
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                    <Spinner
                        android:layout_weight="2"
                        style="@style/mySpinnerItemStyle"
                        android:id="@+id/spinnerTipoUserUsuario"
                        android:layout_width="180dp"
                        android:layout_height="39dp"
                        android:layout_margin="10dp"
                        android:textColor="#fff"
                        android:textSize="20dp" />
                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtNombreUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:textSize="20dp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtApellidoUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apellido"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:textSize="20dp" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/txtCarnetUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Carnet"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:inputType="number"
                        android:visibility="gone"
                        android:textSize="20dp" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtCodigoEmpleado_Usuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Codigo de Empleado"
                        android:selectAllOnFocus="false"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:textColorHint="#fff"
                        android:textSize="20dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtUsuarioUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Usuario"
                        android:selectAllOnFocus="false"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:inputType="textEmailAddress"
                        android:textColorHint="#fff"
                        android:textSize="20dp" />
                </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:id="@+id/LLFacultad_Usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="Facultad: "
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                    <Spinner
                        android:layout_weight="2"
                        android:id="@+id/spinnerFacultadUser"
                        android:layout_width="199dp"
                        android:layout_height="42dp"
                        android:layout_margin="10dp"
                        android:textColor="#fff"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LLLaboratorioUser"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labLabUser"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:text="Laboratorio: "
                        android:visibility="gone"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                    <Spinner
                        android:layout_weight="2"
                        android:id="@+id/spinnerLabUser"
                        android:layout_width="199dp"
                        android:layout_height="42dp"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:textColor="#fff"
                        android:textSize="20dp" />
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtClaveUserNew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:hint="ContraseÃ±a"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:textSize="20dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtClaveComprobarUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#fff"
                        android:hint="Repetir ContraseÃ±a"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:textColorHint="#fff"

                        android:textSize="20dp" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="35dp"
                android:textAlignment="center">

                <Button
                    android:id="@+id/btnRegistrarUser"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="50"
                    android:background="@drawable/button_shape"
                    android:gravity="center"
                    android:text="Registrar"
                    android:textColor="#fff" />


                <Button
                    android:id="@+id/btnCancelUserRegister"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="50"
                    android:background="@drawable/button_shape"
                    android:gravity="center"
                    android:text="Cancelar"
                    android:textColor="#fff" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</FrameLayout>
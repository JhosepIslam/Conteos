<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PerfilFragment"    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="0dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/brand_utec" />

            <TextView
                android:id="@+id/textViewNivelPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Nivel"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewUsuarioPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Nombre de Usuario"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textViewNombrePerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre "
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="20dp" />

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/textViewFacultadPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Facultad"
                    android:textColor="#ffff"
                    android:textSize="15dp" />


                <TextView
                    android:textAlignment="center"
                    android:id="@+id/textViewLaboratorioPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Lab "
                    android:textColor="#ffff"
                    android:textSize="15dp" />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_contraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="4dp"
                android:background="@color/colorPrimaryDark"
                android:text="Cambiar Contraseña"
                android:textColor="#fff" />

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>